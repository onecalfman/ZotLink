{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "zotlink": {
      "enabled": true,
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/onecalfman/zotlink",
        "zotlink"
      ],
      "type": "local",
      "environment": {
        "ZOTLINK_ZOTERO_ROOT": "{env:ZOTERO_HOME}"
      }
    }
  }
}
